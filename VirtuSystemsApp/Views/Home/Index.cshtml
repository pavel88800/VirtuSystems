@{
    ViewBag.Title = "Home Page";
}
<script>

    InitModel();
    var store = InitStore();

    Ext.create('Ext.grid.Panel',
        {
            title: 'Пользователи',
            layout: 'fit',
            store: Ext.getStore('usersStore'),
            plugins: [
                {
                    ptype: 'cellediting',
                    clicksToEdit: 1
                }
            ],
            tbar: [
                {
                    text: 'Добавление новой строки',
                    handler: function() {
                        store.insert(0,
                            {
                                Name: '',
                                BirthDay: '',
                                Phone: 0
                            });
                        this.getSelectionModel().selectRow(0);
                    }
                },
                {
                    text: "Сохранить",
                    handler: function() {
                        var store = Ext.getStore('usersStore');
                        var data = GetData(store);
                        var json = Ext.encode(data);

                        Ext.Ajax.request({
                            method: 'POST',
                            url: '@Url.Action("AddOrEdit")',
                            params: { json },
                            success: function(response) {
                                store.load();
                                alert("Данные успешно обновлены");
                            }
                        });
                    }
                },
            ],
            columns: [
                {
                    header: 'ФИО',
                    dataIndex: 'Name',
                    editor: {
                        xtype: 'textfield',
                        allowBlank: false
                    }
                }, {
                    header: 'Дата рождения',
                    dataIndex: 'BirthDay',
                    xtype: 'datecolumn',
                    format: 'd/m/Y',
                    flex: 1,
                    editor: {
                        xtype: 'datefield',
                        allowBlank: false
                    }
                }, {
                    header: 'Телефон',
                    dataIndex: 'Phone',
                    flex: 1,
                    editor: {
                        xtype: 'textfield',
                        allowBlank: false
                    }
                },
            ],
            renderTo: Ext.getBody()
        });

    /**
     * Получить данные и хранилища     
     */
    function GetData(store) {
        var updateGrid = store.getUpdatedRecords();
        var newRowGrid = store.getNewRecords();

        var data = [];

        for (var i = 0; i < updateGrid.length; i++) {
            data.push(updateGrid[i].data);
        }

        for (var i = 0; i < newRowGrid.length; i++) {
            data.push(newRowGrid[i].data);
        }

        return data;
    }

    /**
     * Инициализация модели
     */
    function InitModel() {
        Ext.define('Scripts.User.Models.User',
            {
                extend: 'Ext.data.Model',
                idProperty: 'Id',
                fields: [
                    {
                        name: 'Id',
                        type: 'int'
                    }, {
                        name: 'Name',
                        type: 'string'
                    }, {
                        name: 'BirthDay',
                        type: 'date'
                    }, {
                        name: 'Phone',
                        type: 'string'
                    }
                ]
            });
    }

    /**
     * Инициализация Хранилища
     */
    function InitStore() {
        return Ext.create('Ext.data.Store',
            {
                model: 'Scripts.User.Models.User',
                storeId: 'usersStore',
                autoLoad: true,
                proxy: {
                    type: 'ajax',
                    url: '@Url.Action("GetUsers")',

                    reader: {
                        type: 'json',
                        root: 'users'
                    }
                }
            });
    }

</script>