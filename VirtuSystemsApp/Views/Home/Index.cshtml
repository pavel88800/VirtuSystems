@{
    ViewBag.Title = "Home Page";
}
<script>


    Ext.define('User',
        {
            extend: 'Ext.data.Model',

            idProperty: 'userID',

            fields: [
                {
                    name: 'userID',
                    type: 'int'
                }, {
                    name: 'name',
                    type: 'string'
                }, {
                    name: 'surname',
                    type: 'string'
                }, {
                    name: 'date',
                    type: 'date'
                }, {
                    name: 'email',
                    type: 'string'
                }, {
                    name: 'married',
                    type: 'bool'
                }
            ]
        });

    var store = Ext.create('Ext.data.Store',
        {
            model: 'User',
            autoLoad: true,
            proxy: {
                type: 'ajax',
                url: '@Url.Action("App")',
                
                reader: {
                    type: 'json',
                    root: 'users'
                }
            }
        });

    Ext.create('Ext.grid.Panel',
        {
            title: 'Пользователи',
            layout: 'fit',
            store: store,
            plugins:[{
                ptype:'cellediting',
                clicksToEdit: 1
            }],
            columns: [
                {
                    header: 'ФИО',
                    dataIndex: 'name',
                    editor: {
                        xtype: 'textfield',
                        allowBlank: false
                    }
                }, {
                    header: 'Дата рождения',
                    dataIndex: 'date',
                    xtype: 'datecolumn',
                    format: 'd/m/Y',
                    flex: 1,
                    editor: {
                        xtype: 'datefield',
                        allowBlank: false
                    }
                }, {
                    header: 'Email',
                    dataIndex: 'email',
                    flex: 1,
                    editor: {
                        xtype: 'textfield',
                        allowBlank: false
                    }
                },
            ],
            renderTo: Ext.getBody()
        });


</script>