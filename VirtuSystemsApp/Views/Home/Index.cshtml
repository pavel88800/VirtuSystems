@{
    ViewBag.Title = "Home Page";
}
    <script>


    Ext.define('User',
        {
            extend: 'Ext.data.Model',

            idProperty: 'Id',

            fields: [
                {
                    name: 'Id',
                    type: 'int'
                }, {
                    name: 'Name',
                    type: 'string'
                }, {
                    name: 'BirthDay',
                    type: 'date'
                }, {
                    name: 'Phone',
                    type: 'string'
                }
            ]
        });

    var store = Ext.create('Ext.data.Store',
        {
            model: 'User',
            storeId: 'usersStore',
            autoLoad: true,
            proxy: {
                type: 'ajax',
                url: '@Url.Action("App")',

                reader: {
                    type: 'json',
                    root: 'users'
                }
            }
        });

    Ext.create('Ext.grid.Panel',
        {
            title: 'Пользователи',
            layout: 'fit',
            store: store,
            plugins: [
                {
                    ptype: 'cellediting',
                    clicksToEdit: 1
                }
            ],
            tbar: [
                {
                    text: 'Добавление новой строки',
                    handler: function() {
                        store.add({
                            Name: '',
                            BirthDay: '',
                            Phone: 0
                        });
                    }
                },
                {
                    text: "Сохранить",
                    handler: function () {
                        var store = Ext.getStore('usersStore');
                        
                        var data = GetData(store);
                        var json = Ext.encode(data);
                        
                        Ext.Ajax.request({
                            method: 'POST',
                            url: '@Url.Action("Edit")',
                            params: {json},
                            success: function(response){
                                alert(response.responseText);
                            }
                        });
                    }
                },
            ],
            columns: [
                {
                    header: 'ФИО',
                    dataIndex: 'Name',
                    editor: {
                        xtype: 'textfield',
                        allowBlank: false
                    }
                }, {
                    header: 'Дата рождения',
                    dataIndex: 'BirthDay',
                    xtype: 'datecolumn',
                    format: 'd/m/Y',
                    flex: 1,
                    editor: {
                        xtype: 'datefield',
                        allowBlank: false
                    }
                }, {
                    header: 'Телефон',
                    dataIndex: 'Phone',
                    flex: 1,
                    editor: {
                        xtype: 'textfield',
                        allowBlank: false
                    }
                },
            ],
            renderTo: Ext.getBody()
        });


    function GetData(store) {
        var updateGrid = store.getUpdatedRecords();
        var newRowGrid = store.getNewRecords();
        var removeRowGrid = store.getRemovedRecords();

        var data = [];

        for (var i = 0; i < updateGrid.length; i++) {
            data.push(updateGrid[i].data);
        }

        for (var i = 0; i < newRowGrid.length; i++) {
            data.push(newRowGrid[i].data);
        }

        for (var i = 0; i < removeRowGrid.length; i++) {
            data.push(removeRowGrid[i].data);
        }

        return data;
    }
    </script>